{
  "buildOnSave": false,
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "allowJs": true,
    "pretty": true,
    "skipLibCheck": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "lib": ["es2020"],
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src/**/*"]
}
